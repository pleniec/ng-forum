<!DOCTYPE html>
<html ng-app="ng-forum" ng-controller="RootController">
  <head>
    <title>NgForum</title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <ul class="nav navbar-nav">
          <li><a ui-sref="index">Home</a></li>
        </ul>

        <div ng-switch="session.isAuthenticated()">
          <div ng-switch-when="true">
            <div class="navbar-form navbar-right">
              <div class="btn-group" uib-dropdown>
                <button id="user-dropdown-button" class="btn btn-primary" uib-dropdown-toggle>
                  {{ session.getUser().name }} <span class="caret"></span>
                </button>
                <ul class="uib-dropdown-menu">
                  <li role="menuitem"><a ui-sref="index">Edit Profile</a></li>
                  <li class="divider"></li>
                  <li role="menuitem"><a href="#" ng-click="signOut()">Sign Out</a></li>
                </ul>
              </div>
            </div>
          </div>
          <div ng-switch-when="false">
            <sign-in-form></sign-in-form>
            <ul class="nav navbar-nav navbar-right">
              <li><a ui-sref="registration">Sign Up</a></li>
            </ul>
          </div>
        </div>
      </div>
    </nav>
    <div class="container">
      <div ui-view></div>
    </div>
  </body>
</html>
